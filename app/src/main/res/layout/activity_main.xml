<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_xml_examples"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/label_wrap_content_by_wrap_content"
            android:onClick="buttonClicked"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_path_button_height"
            android:text="@string/label_match_parent_by_default_height"
            android:onClick="buttonClicked"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_wrap_content_with_default_padding"
            style="@style/AppTheme.PathButton.WithPadding"
            android:onClick="buttonClicked"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/label_wrap_content_by_60dp_default_padding"
            style="@style/AppTheme.PathButton.WithPadding"
            android:onClick="buttonClicked"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_path_button_height"
            android:text="@string/label_custom_border_width"
            style="@style/AppTheme.PathButton.ThickBorder"
            android:onClick="buttonClicked"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_path_button_height"
            android:text="@string/label_alternate_colors"
            style="@style/AppTheme.PathButton.AlternateColors"
            android:onClick="buttonClicked"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_path_button_height"
            android:text="@string/label_solid_color"
            style="@style/AppTheme.PathButton.SolidSingleColor"
            android:onClick="buttonClicked"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_programmatic_examples"
            android:layout_marginBottom="@dimen/default_path_button_horizontal_margin"/>

    </LinearLayout>

</ScrollView>
