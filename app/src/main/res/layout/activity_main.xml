<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.dptsolutions.pathbutton.PathButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="wrap_content x wrap_content"
        android:layout_marginBottom="10dp"/>

    <com.dptsolutions.pathbutton.PathButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="match_parent x 48dp"
        app:borderWidth="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp" />

    <com.dptsolutions.pathbutton.PathButton
        android:id="@+id/programmatic_strokewidth_example"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="programatically set border to 10dp" />



</LinearLayout>
