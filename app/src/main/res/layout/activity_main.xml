<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XML Examples"
            android:layout_marginBottom="10dp"/>

        <com.dptsolutions.pathbutton.PathButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="wrap_content x wrap_content"
            android:onClick="buttonClicked" />

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_path_button_height"
            android:text="match_parent x default_path_button_height"
            android:onClick="buttonClicked" />

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wrap_content, default padding"
            style="@style/AppTheme.PathButton.WithPadding"
            android:onClick="buttonClicked" />

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="wrap_content x 60dp"
            style="@style/AppTheme.PathButton.WithPadding"
            android:onClick="buttonClicked" />

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_path_button_height"
            android:text="Custom border width"
            style="@style/AppTheme.PathButton.WithPadding"
            app:borderWidth="5dp"
            android:onClick="buttonClicked" />

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_path_button_height"
            android:text="Alternate text/fill colors"
            style="@style/AppTheme.PathButton.AlternateColors"
            android:onClick="buttonClicked" />

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_path_button_height"
            android:text="Solid text/fill color"
            style="@style/AppTheme.PathButton.SolidSingleColor"
            android:onClick="buttonClicked" />



        <com.dptsolutions.pathbutton.PathButton
            android:id="@+id/programmatic_borderwidth_example"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_path_button_height"
            android:text="Programatically set border to 10dp"
            android:onClick="buttonClicked" />

        <com.dptsolutions.pathbutton.PathButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_path_button_height"
            android:textColor="@drawable/alternate_text_colors"
            android:text="Color State List for TextColor"
            android:onClick="buttonClicked" />
    </LinearLayout>

</ScrollView>
